package Giris;

import java.util.Scanner;

public class patika {
    public static void main(String[] args) {

        int heat;

        Scanner input = new Scanner(System.in);

        System.out.print("Lütfen sıcaklık değerini giriniz : ");
        heat = input.nextInt();

        if (heat < 5) {
            System.out.println("Kayak yapmak için mükemmel bir hava");
        }
        else if (heat > 5 && heat <=15) {
            System.out.println("Sinemaya gitmenin tam vakti");
        }
        else if (heat >= 10 && heat <= 25) {
            System.out.println("Piknik çantasını hazırlasan iyi olacak");
            System.out.println("Ya da Sinemaya'da gidebilirsin.");
        }
        else  {
            System.out.println("Yüzmek için neyi bekliyorsun ?");
            
        }
    }
}




